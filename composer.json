{
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "behat/behat": "^3.1",
        "guzzlehttp/guzzle": "^6.2",
        "phpunit/phpunit": "^5.5"
    },
    "require": {
        "php": "^7.0",
        "friendsofphp/php-cs-fixer": "dev-master",
        "pimple/pimple": "^3.0",
        "ramsey/uuid": "^3.5",
        "samburns/pimple3-containerinterop": "^1.2",
        "slim/slim": "3.0.*",
        "tomphp/container-configurator": "^0.5.2",
        "tomphp/transform": "^0.2.4"
    },
    "autoload": {
        "psr-4": {
            "TomPHP\\TimeTracker\\": "src/"
        }
    },
    "autoload-dev": {
        "files": ["vendor/phpunit/phpunit/src/Framework/Assert/Functions.php"],
        "psr-4": {
            "test\\features\\TomPHP\\TimeTracker\\": "test/features/bootstrap/",
            "test\\integration\\TomPHP\\TimeTracker\\": "test/integration/",
            "test\\unit\\TomPHP\\TimeTracker\\": "test/unit/"
        }
    }
}
